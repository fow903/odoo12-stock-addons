<openerp>
<data>
<record id="product_template_form_count_claims" model="ir.ui.view">
    <field name="name">product template count claims</field>
    <field name="model">product.template</field>
     <field name="inherit_id" ref="product.product_template_only_form_view" />
    <field name="arch" type="xml">
        <xpath expr="//div[@name='button_box']" position="inside">
            <button name="claim_action" type="object" class="oe_stat_button" icon="fa-comment">
                <field name="claim_count" widget="statinfo"/>
            </button>
        </xpath>
        <field name='type' position='after'>
            <field name="cycle"/>
        </field>
    </field>
</record>
</data>
</openerp>
